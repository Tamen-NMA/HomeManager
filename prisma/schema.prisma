generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String            @id @default(cuid())
  name                String?
  email               String?           @unique
  emailVerified       DateTime?
  image               String?
  dietaryRestrictions String?
  cuisinePreferences  String?
  accounts            Account[]
  sessions            Session[]
  householdMembers    HouseholdMember[]
  choreSchedules      ChoreSchedule[]
  mealPlans           MealPlan[]
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model HouseholdMember {
  id        String      @id @default(cuid())
  name      String
  avatar    String?
  age       Int?
  role      String      @default("adult")
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     ChoreTask[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([userId])
}

model ChoreSchedule {
  id          String      @id @default(cuid())
  title       String
  weekStart   DateTime
  weekEnd     DateTime
  status      String      @default("draft")
  aiGenerated Boolean     @default(false)
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       ChoreTask[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([weekStart])
}

model ChoreTask {
  id          String           @id @default(cuid())
  title       String
  description String?
  dayOfWeek   Int
  isCompleted Boolean          @default(false)
  priority    String           @default("medium")
  scheduleId  String
  schedule    ChoreSchedule    @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  assigneeId  String?
  assignee    HouseholdMember? @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([scheduleId])
  @@index([assigneeId])
}

model MealPlan {
  id          String   @id @default(cuid())
  title       String
  weekStart   DateTime
  weekEnd     DateTime
  status      String   @default("draft")
  servings    Int      @default(4)
  aiGenerated Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  meals       Meal[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([weekStart])
}

model Meal {
  id          String   @id @default(cuid())
  name        String
  description String?
  mealType    String
  dayOfWeek   Int
  calories    Int?
  prepTime    Int?
  ingredients String?
  planId      String
  plan        MealPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([planId])
}
